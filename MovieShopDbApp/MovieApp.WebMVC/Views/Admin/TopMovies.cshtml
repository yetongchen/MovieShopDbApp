@model IEnumerable<ApplicationCore.Models.MoviePurchaseReportModel>
@{
    ViewData["Title"] = "Top Movies";
}
<h2>Top Movies</h2>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Total Purchases</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model.ElementAt(i).Title</td>
                <td>@Model.ElementAt(i).TotalPurchases</td>
            </tr>
        }
    </tbody>
</table>

